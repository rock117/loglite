# Loglite Backend Configuration Example
# Copy this file to .env and adjust values as needed

# Database connection
LOGLITE_DB_URL=postgres://postgres:postgres@localhost/loglite

# Tantivy index directory
LOGLITE_INDEX_DIR=./loglite-index

# Log retention settings
LOGLITE_RETENTION_DAYS=7
LOGLITE_TTL_INTERVAL_SECS=300

# Tail ingestion settings
LOGLITE_TAIL_INTERVAL_SECS=10

# Snowflake ID generation (node ID for distributed deployment)
LOGLITE_NODE_ID=1

# Rust logging level
RUST_LOG=info,loglite_backend=debug
